{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/clients/add.css" />
{% endblock %}

{% block url %}
    <a href="{{ path('entry.index') }}">Liste des clients</a> <i class="trending_flat material-icons ">trending_flat</i> <a href="{{ path('entry.view', {id: id}) }}">{{ name }}</a> <i class="trending_flat material-icons ">trending_flat</i> Modification d'un client
{% endblock %}

{% block body %}
    <div class="table">
        {{ form_start(form) }}
        <div class="row">{{ form_row(form.gender) }} {{ form_row(form.surname) }} {{ form_row(form.name) }}</div>
        <div class="row">{{ form_row(form.address) }}</div>
        <div class="row">{{ form_row(form.postal_code) }}</div>
        <div class="row">{{ form_row(form.city) }}</div>
        <div class="row">{{ form_row(form.nationality) }}</div>
        <div class="row">{{ form_row(form.home_phone) }}</div>
        <div class="row">{{ form_row(form.phone) }}</div>
        <div class="box_edit">
            <a class="button button__green"><button type="submit">Modifier le client</button></a>
            {{ form_end(form) }}
            <a href="{{ path('entry.view', {id: id}) }}" class="button button__red"><button type="button" formtarget="_parent">Retour</button></a>
        </div>
    </div>
{% endblock %}

